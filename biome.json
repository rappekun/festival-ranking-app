{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "warn",
					"options": {}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	},
	"json": {
		"formatter": { "enabled": true },
		"linter": { "enabled": true },
		"assist": { "enabled": true },
		"parser": { "allowComments": true, "allowTrailingCommas": true }
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{ "type": false, "source": [":BUN:", ":NODE:"] },
							":BLANK_LINE",
							{ "type": false, "source": ["react*", "react/**"] },
							{ "type": false, "source": [":PACKAGE:"] },
							":BLANK_LINE:",
							{ "type": false, "source": [":PATH:"] },
							{ "type": false },
							":BLANK_LINE:",
							{ "type": true }
						]
					}
				}
			}
		}
	},
	"css": {
		"assist": { "enabled": true },
		"formatter": { "enabled": true, "indentStyle": "tab", "indentWidth": 4 },
		"linter": { "enabled": true },
		"parser": { "cssModules": true }
	}
}
